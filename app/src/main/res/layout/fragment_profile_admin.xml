<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".bottomnav.profile.ProfileFragment">

    <ImageView
        android:id="@+id/top_screen"
        android:layout_width="wrap_content"
        android:layout_height="246dp"
        android:src="@drawable/top_profile"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <ImageView
        android:id="@+id/white_rect"
        android:layout_width="360dp"
        android:layout_height="280dp"
        android:layout_marginTop="108dp"
        android:src="@drawable/rect"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.491"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/ellipse_for_photo"
        android:layout_width="125dp"
        android:layout_height="125dp"
        android:layout_marginTop="50dp"
        android:src="@drawable/ellipse_for_photo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/username_Tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="2dp"
        android:textColor="@color/black"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ellipse_for_photo"
        tools:text="Имя" />

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/profileImageView"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="3dp"
        android:src="@drawable/account_icon"
        app:layout_constraintEnd_toEndOf="@id/ellipse_for_photo"
        app:layout_constraintStart_toStartOf="@id/ellipse_for_photo"
        app:layout_constraintTop_toTopOf="@id/ellipse_for_photo" />

    <ImageButton
        android:id="@+id/edit_profile"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_marginTop="20dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/edit_profile"
        app:layout_constraintEnd_toEndOf="@+id/white_rect"
        app:layout_constraintHorizontal_bias="0.094"
        app:layout_constraintStart_toStartOf="@+id/white_rect"
        app:layout_constraintTop_toTopOf="@+id/white_rect" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"

        android:src="@drawable/two_lines"
        app:layout_constraintEnd_toEndOf="@+id/white_rect"

        app:layout_constraintStart_toEndOf="@+id/white_rect"
        app:layout_constraintStart_toStartOf="@+id/white_rect"
        app:layout_constraintTop_toBottomOf="@+id/username_Tv" />

    <ImageButton
        android:id="@+id/button_like"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="8dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/but_like"
        app:layout_constraintEnd_toEndOf="@+id/white_rect"
        app:layout_constraintHorizontal_bias="0.44"
        app:layout_constraintStart_toStartOf="@+id/white_rect"
        app:layout_constraintTop_toBottomOf="@+id/setting" />

    <ImageButton
        android:id="@+id/setting"
        android:layout_width="330dp"
        android:layout_height="70dp"
        android:layout_marginTop="128dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/but_setting"
        app:layout_constraintEnd_toEndOf="@+id/white_rect"
        app:layout_constraintHorizontal_bias="0.48"
        app:layout_constraintStart_toStartOf="@+id/white_rect"
        app:layout_constraintTop_toTopOf="@+id/white_rect" />

    <ImageButton
        android:id="@+id/receive"
        android:layout_width="380dp"
        android:layout_height="260dp"
        android:background="@null"
        android:scaleType="fitCenter"
        android:src="@drawable/your_receive"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.487"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/white_rect"
        app:layout_constraintVertical_bias="0.512" />

</androidx.constraintlayout.widget.ConstraintLayout>