<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:backgroundTint="@color/color_main_BG"
    tools:context=".UI.RegisterActivity">
    <ImageView
        android:id="@+id/applogo"
        android:layout_width="335dp"
        android:layout_height="275dp"
        android:contentDescription="@string/app_name"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:src="@drawable/logo_login_swipe" />

    <ImageView
        android:id="@+id/window_register"
        android:layout_width="wrap_content"
        android:layout_height="250dp"
        android:layout_below="@id/swipe_btn"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="10dp"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        android:src="@drawable/window_register" />

    <ImageButton
        android:id="@+id/swipe_btn"
        android:layout_width="match_parent"
        android:layout_height="31dp"
        android:layout_below="@id/applogo"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginRight="50dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/swipe_btn_register" />

    <EditText
        android:id="@+id/register_phone_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/swipe_btn"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="40dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/nunito"
        android:hint="Номер телефона"
        android:inputType="number"
        android:padding="15dp"
        android:textColor="@color/black"
        android:textColorHint="#A4A4A4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_password_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_phone_input"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/nunito"

        android:hint="Пароль"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="#A4A4A4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/register_username_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/register_password_input"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:backgroundTint="@android:color/transparent"
        android:fontFamily="@font/nunito"
        android:hint="Ваше имя"
        android:inputType="textPassword"
        android:padding="18dp"
        android:textColor="@color/black"
        android:textColorHint="#A4A4A4"
        android:textSize="20sp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/register_button"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_below="@id/window_register"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:backgroundTint="@android:color/transparent"
        android:contentDescription="@string/app_name"
        android:padding="20dp"
        android:scaleType="centerCrop"
        android:src="@drawable/next_button" />

    <TextView
        android:id="@+id/admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_iv"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/app_name"
        android:fontFamily="@font/nunito"

        android:text="Войти как администратор"
        android:textColor="#656565"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/not_admin_panel_link"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/or_iv"
        android:layout_alignParentEnd="false"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_marginRight="25dp"
        android:contentDescription="@string/app_name"
        android:fontFamily="@font/nunito"
        android:text="Войти как пользователь"
        android:textColor="#656565"
        android:textSize="18sp"
        android:visibility="invisible" />

    <ImageView
        android:id="@+id/or_iv"
        android:layout_width="match_parent"
        android:layout_height="15dp"
        android:layout_below="@id/register_button"
        android:layout_marginLeft="50dp"
        android:layout_marginTop="5dp"
        android:layout_marginRight="50dp"
        android:contentDescription="@string/app_name"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/or_iv" />


</RelativeLayout>